# --- Application Configuration ---
# The port the application will run on
PORT=3000

# --- Database Configuration ---
# MongoDB connection URI
MONGO_URI=mongodb://localhost:27017/lead-generator-bot

# --- External API Keys ---
# Google Gemini API Key for AI features
GEMINI_API_KEY=YOUR_GEMINI_API_KEY

# --- WhatsApp Integration ---
# Path to store the WhatsApp session file
WHATSAPP_SESSION_PATH=./.wwebjs_auth

# --- Email (SMTP) Configuration ---
# Used for sending email notifications
EMAIL_SMTP_HOST=YOUR_SMTP_HOST
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=YOUR_SMTP_USERNAME
EMAIL_SMTP_PASS=YOUR_SMTP_PASSWORD
EMAIL_SENDER_ADDRESS=your_sender_email@example.com

# --- Logging Configuration ---
# Set the application log level (e.g., error, warn, info, debug)
LOG_LEVEL=info